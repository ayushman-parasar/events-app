<section class="user">
    <h1><%= @user.name %></h1>
    <h2><%= mail_to(@user.email)%></h2>
   <% if current_user?(@user)%>
    
        <div class="actions">
            <%= link_to "Edit Account", edit_user_path, class: "button"%>
            <%= link_to "Delete account", @user, method: :delete,
                data: {confirm: "Are you sure ",
                class: "button delete"}
            %>
        </div>
    <%end%>
    <% if @registrations.present? %>
        <h3>Registrations</h3>
        <% @registrations.each do |r| %>
            
            <div class="registration">
                <div class="image">
                    <%= link_to image_tag(r.event.image_file_name), r.event%>
                </div>
                <div class="name">
                    <%= link_to r.event.name, r.event %>
                </div>
                <div class="date">
                    <%= time_ago_in_words(r.created_at)%> ago
                </div>
            </div>
        <%end%>
    <%end %>

    <% if @liked_events.present?%>
        <h3>Liked events</h3>
        <div class="liked-events">
            <ul>
                <% @liked_events.each do |event|%>
                <li>
                    <%= link_to image_tag(event.image_file_name), event %>

                </li>
                
                <%end%>
            </ul>
        </div>
    <%end%>
</section>