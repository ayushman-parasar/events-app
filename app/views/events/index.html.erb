
    <% @events.each do |event| %>
        <section class="event">
            <div class="image">
                <%= image_tag event.image_file_name %>
            </div>
            <div class="summary">
                <!-- <h2><%= link_to event.name, event_path(event) %></h3> -->
                <h2><%= link_to event.name, event %></h3> 
                    <!-- passing only event works as rails calls event_path helper after seeing event -->
                <h3><%= day_and_time(event) %> in <%= event.location  %></h3>
                <span class="price">
                    <%= price(event) %>
                </span>
                <p>   
                    <%= truncate(event.description, length:35, seperator: " ") %>
                </p>
            </div>
        </section>
        
        <%end%>
        <% if current_user_admin? %>
            <section>
                <%= link_to "Create Event", new_event_path %>
            </section>
            <%end%>
